<Window x:Class="Deushev_Gvozdeva_lab13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Deushev_Gvozdeva_lab13"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="myGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Label Content="Sample text" Grid.Column="1" Grid.Row="1"/>
        <Label Content="Title of App" Grid.Column="1" Grid.Row="0"/>
        <Button Content="B" Grid.Column="3" Grid.Row="2" Click="Button_Click_1"/>
        <Button Content="A" Grid.Column="1" Grid.Row="2" FontSize="40" FontWeight="Bold" Background="#FF0058CE" FontFamily="Algerian" Foreground="White" Click="Button_Click"/>
    </Grid>
</Window>
